<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="my.example.achraf.mydiaries.MainActivity"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to MyDiaries..."
            android:layout_marginTop="0dp"
            android:textColor="@color/pinky"
            android:fontFamily="cursive"
            android:textSize="65sp"
            android:id="@+id/welcome"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        android:padding="80dp"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Open My Diary"
            android:background="@drawable/show_cadre_diary_pinky"
            android:onClick="open"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"



            />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="go to options"
            android:textSize="20sp"
            android:background="@drawable/show_cadre_diary_pinky"
            android:onClick="getOption"
            android:textColor="@color/white"


            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text=" My Diary v1.21 2018 - 2019 "
            android:gravity="end"
            android:textColor="@color/dark_pinky"
            />



    </RelativeLayout>


    <!--








-->



</LinearLayout>